//https://script.google.com/macros/s/AKfycbxYi0fYSlIeFtzYAPm5loBuhhXc0WdK-zRarIdSMAWsEeGHmx_rqZwObdvjFagDM1jNNA/exec
const sheetName = 'Sheet1'
const scriptProp = PropertiesService.getScriptProperties()

function initialSetup () {
  const activeSpreadsheet = SpreadsheetApp.getActiveSpreadsheet()
  scriptProp.setProperty('key', activeSpreadsheet.getId())
}

function doGet(e) {
  const lock = LockService.getScriptLock()
  lock.tryLock(10000)

  try {
    const invoices = getInvoices();
    return ContentService
      .createTextOutput(JSON.stringify({ 'result': 'success', 'invoices': invoices }))
      .setMimeType(ContentService.MimeType.JSON)
  } catch (e) {
    return ContentService
      .createTextOutput(JSON.stringify({ 'result': 'error', 'error': e }))
      .setMimeType(ContentService.MimeType.JSON)
  } finally {
    lock.releaseLock()
  }
}

function doPost (e) {
  const lock = LockService.getScriptLock()
  lock.tryLock(10000)

  try {
    const doc = SpreadsheetApp.openById(scriptProp.getProperty('key'))
    const sheet = doc.getSheetByName(sheetName)

    // Parse the JSON body
    var data = {};
    try {
      if (e.postData && e.postData.contents) {
        data = JSON.parse(e.postData.contents);
      }
    } catch (err) {
      // Fallback
    }

    const action = data.action || 'create';
    const headers = sheet.getRange(1, 1, 1, sheet.getLastColumn()).getValues()[0];

    if (action === 'create') {
        const nextRow = sheet.getLastRow() + 1;
        const newRow = headers.map(function(header) {
          if (header === 'Date') {
            return data['Date'] ? new Date(data['Date']) : new Date();
          }
          if (header === 'Time') {
            const timeVal = data['Time'];
            // Default to current time if missing or 'null'
            if (!timeVal || timeVal === 'null' || timeVal === '') {
              return new Date().toLocaleTimeString('en-GB', { hour: '2-digit', minute: '2-digit', hour12: false });
            }
            return timeVal;
          }
          return data[header];
        });
        sheet.getRange(nextRow, 1, 1, newRow.length).setValues([newRow]);
    } 
    
    else if (action === 'update' || action === 'delete') {
        // Find row by Invoice Number (Column D, index 3)
        // Adjust column index if Invoice Number is not at index 3 in your sheet
        // Based on previous code: row[3] is Invoice Number
        const invoiceId = data['id'] || data['Invoice Number']; // Expect ID in payload
        if (!invoiceId) {
            throw new Error("Missing Invoice ID/Number for action: " + action);
        }

        const lastRow = sheet.getLastRow();
        const invoiceIds = sheet.getRange(2, 4, lastRow - 1, 1).getValues().flat().map(String); // Column D is 4th column
        const rowIndex = invoiceIds.indexOf(String(invoiceId));

        if (rowIndex !== -1) {
            const actualRow = rowIndex + 2; // +2 because data starts at row 2

            if (action === 'delete') {
                sheet.deleteRow(actualRow);
            } else if (action === 'update') {
               const updatedRow = headers.map(function(header) {
                  // For update, we use the new data if present, else keep existing?
                  // Usually update sends full object.
                   if (header === 'Date') {
                     return data['Date'] ? new Date(data['Date']) : new Date();
                   }
                   if (header === 'Time') {
                     const timeVal = data['Time'];
                     if (!timeVal || timeVal === 'null' || timeVal === '') {
                       return new Date().toLocaleTimeString('en-GB', { hour: '2-digit', minute: '2-digit', hour12: false });
                     }
                     return timeVal;
                   }
                   return data[header] !== undefined ? data[header] : ""; 
               });
               sheet.getRange(actualRow, 1, 1, updatedRow.length).setValues([updatedRow]);
            }
        }
    }

    // Fetch all data to return to client (Sync State)
    const invoices = getInvoices(doc, sheet);

    return ContentService
      .createTextOutput(JSON.stringify({ 'result': 'success', 'invoices': invoices }))
      .setMimeType(ContentService.MimeType.JSON)
  }

  catch (e) {
    return ContentService
      .createTextOutput(JSON.stringify({ 'result': 'error', 'error': e.toString() }))
      .setMimeType(ContentService.MimeType.JSON)
  }

  finally {
    lock.releaseLock()
  }
}

// Helper function to get invoices (shared by doGet and doPost)
function getInvoices(doc, sheet) {
  if (!doc) doc = SpreadsheetApp.openById(scriptProp.getProperty('key'))
  if (!sheet) sheet = doc.getSheetByName(sheetName)

  const lastRow = sheet.getLastRow();
  if (lastRow < 2) return []; // Header only or empty

  const allDataRange = sheet.getRange(2, 1, lastRow - 1, sheet.getLastColumn());
  const allValues = allDataRange.getValues();
  
  // Map rows to objects matching the requested columns
  const invoices = allValues.map(row => ({
    invoiceDate: row[0], 
    invoiceTime: row[1], 
    vendorName: row[2], 
    invoiceNumber: row[3], 
    totalAmount: row[4], 
    lineItems: row[5] ? JSON.parse(row[5]) : [],
    fileName: row[6],
    id: row[3] 
  })).reverse(); 

  return invoices;
}
